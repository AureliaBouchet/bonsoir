<div class="navbar-wagon">
  <p>
  <span id="logo-typed-text" style= "font-size: 50px; color: white;"></span>
  </p>


   <div class="search-box">
    <%= form_tag events_path, class: "new-search-bar", method: :get, class: "form-inline" do %>
      <div class="form-group">

        <%= text_field_tag :date, params[:date], class: "form-control", style: "width: 130px; color: white; background-color: transparent; border-bottom-color: white;" %>
      </div>

      <div class="form-group">

        <%= text_field_tag :location, params[:location], class: "form-control", style: "width: 350px; color: white; background-color: transparent; border-bottom-color: white;" %>
      </div>

      <div class="form-group">

        <%= text_field_tag :distance, params[:distance], placeholder: "10 km", class: "form-control", style: "width: 80px; color: white; background-color: transparent; border-bottom-color: white;"%>
      </div>

      <%= submit_tag value="Action", class: "btn btn-default"  %>
    <% end %>
   </div>

</div>






