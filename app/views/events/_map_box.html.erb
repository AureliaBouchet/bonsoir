<div class="info-window">
    <div class="card card-small " style="background-image: linear-gradient(rgba(240,240,240,0.2), rgba(240,240,240,0.1)), url(<%= cl_image_path event.photo, crop: :fill %>);">

      <div class="card-description ">

        <h2><%=event.title%> <%="-"%> <%=event.time %></h2>
        <p><%=event.address%></p>
        <p><%=event.price%></p>

      </div>

      <div class="card-hover">
        <div class="event-details">
            <p><%=event.description%></p>
        </div>
        <br />
        <% url_booking = "#{event.url_zoom.gsub('evt.htm', 'evtbook.htm')}" + "?&dh=" + "#{event.date.year.to_s}" + "-" + "#{event.date.month.to_s}" + "-" + "#{event.date.day.to_s}" + "+" + "#{event.time.gsub('h', ':')}" + "#pricePart" %>
        <%= link_to "Réserver auprès de notre partenaire Billet Réduc", url_booking, target: '_blank' %>
        <!-- <a style="font-size: 10px" href="" target="_blank" >Réserver auprès de notre partenaire Billet Réduc</a> -->
      </div>


    </div>
</div>



