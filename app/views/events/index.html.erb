<% if @events.size == 0 %>
  <p class="msg-zero-result">Les pièces de théatres sélectionnées par notre intelligence artificielle pour vous affichent complet!<br><br>
  Elargissez votre périmètre géographique ou choisissez une autre soirée!</p>

<% else %>
  <% if @events.size == 1 %>
    <p class="msg-result">Il ne reste plus qu'une pièce de théatre disponible autour de vous! Courrez-y ou élargissez vos critères de recherche! </p>
  <% elsif @events.size == 5 %>
    <p class="msg-result">Voici les <%= @events.size %> pièces de théatre sélectionnées pour vous! <br> Bonsoir!</p>
  <% else %>
     <p class="msg-result">Voici les <%= @events.size %> pièces de théatre sélectionnées pour vous!</p>
      <p class="msg-result">Pour afficher 5 pièces sélectionnées par Bonsoir, élargissez votre périmètre géographique ou choisissez une autre soirée.</p>
  <% end %>


<ul class="nav nav-tabs nav-perso" role="tablist">
  <li role="presentation" class="active"><a href="#list" aria-controls="list" role="tab" data-toggle="tab"><i class="fas fa-list-ul"> </i> À l'affiche</a></li>
  <li role="presentation" id="map-xs"><a href="#carte" aria-controls="carte" role="tab" data-toggle="tab"><i class="fas fa-map-marker"> </i> Carte</a></li>
</ul>


<!-- SMALL DEVICE -->
<!-- TABS -->

<!-- TAB CARDS -->
  <div class="tab-content">

    <div role="tabpanel" class="tab-pane active" id="list">
<div class="container">
      <div class="row">

        <% @events.each do |event| %>
          <div class="col-xs-12 col-sm-6 col-md-4">
          <!-- Card de face -->
                  <div class="card card-big" style="background-image: linear-gradient(rgba(240,240,240,0.2), rgba(240,240,240,0.1)), url(<%= cl_image_path event.photo, crop: :fill %>);">
                    <div class="circle-white">
                      <%=event.time %>
                    </div>
                <!-- Card retournée -->
                    <div class="card-hover">
                      <div class="event-details">
                          <p><%=event.description%></p>
                      </div>
                      <a href="">Réserver auprès de notre partenaire Billet Réduc</a>
                    </div>
                <!-- Card description -->
                    <div class="card-description">
                      <h2><%=event.title%></h2>
                      <p> <%= "-" %></p>
                      <h3><%=event.address%></h3>
                      <p> <%=event.price%></p>
                    </div>
                  </div>
              </div>
            <% end %>
          </div>
          </div>
        </div>


<!-- TAB CARTE -->
    <div role="tabpanel" class="tab-pane" id="carte">
      <div class="map-container">
        <div
          id="map_xs"
          style="width: 100%;
          height: 500px;
          margin-top: 15px;"
          data-markers="<%= @markers.to_json %>">
        </div>

      </div>
    </div>
  </div>
<% end %>


