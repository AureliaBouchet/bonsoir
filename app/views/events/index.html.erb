      <div class="map-container">
        <div
          id="map_xs"
          style="width: 100%;
          height: 500px;
          margin-top: 15px;"
          data-markers="<%= @markers.to_json %>">
        </div>

      </div>
    </div>
<!-- fin TAB CARTE -->
  </div>
<% end %>






