<div class="search-container">
<div class="search-banner search-hidden">
    <div class="search-box " id= "search-form">
      <%= form_tag events_path, class: "new-search-bar", method: :get, class: "form-inline" do %>
        <div class="row">
          <div class="form-group", style = "margin-bottom: 10px">
            <%= text_field_tag :date, params[:date], class: "form-control"%>
          </div>
        </div>
        <div class="row">
          <div class="form-group ">
            <%= text_field_tag :location, params[:location], class: "form-control", style: "color: white; background-color: transparent; border-bottom-color: white; margin-bottom: 10px" %>
          </div>
          <div class="form-group ">
              <%= text_field_tag :distance, params[:distance], placeholder: "10 km", class: "form-control", style: "color: white; background-color: transparent; border-bottom-color: white;margin-bottom: 10px;" %>
          </div>
      </div>
        <%= submit_tag value="Action", class: "btn btn-default"  %>
      <% end %>
     </div>
  </div>
</div>

<p class="msg-result"><em>Voici les <%= @events.size %> pièces de théatre sélectionnées par l'équipe de Bonsoir pour vous</em></p>


<ul class="nav nav-tabs nav-perso" role="tablist">
  <li role="presentation" class="active"><a href="#list" aria-controls="list" role="tab" data-toggle="tab"><i class="fas fa-list-ul"> </i> À l'affiche</a></li>
  <li role="presentation" id="map-xs"><a href="#carte" aria-controls="carte" role="tab" data-toggle="tab"><i class="fas fa-map-marker"> </i> Carte</a></li>
</ul>


